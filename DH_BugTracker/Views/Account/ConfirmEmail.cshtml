@{
    ViewBag.Title = "Confirmed Email";
        Layout = "~/Views/Shared/_LoginShared.cshtml";
}

<span class="login100-form-title p-b-33">
    @ViewBag.Title
</span>
<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto d-flex justify-content-center">
        <p>
            Thank you for confirming your email. Please
            <b>@Html.ActionLink("Click Here", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</b>
            to Log In.
        </p>
    </div>
</div>
