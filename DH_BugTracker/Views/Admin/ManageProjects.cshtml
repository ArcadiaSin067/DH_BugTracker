@model IEnumerable<DH_BugTracker.Models.ManageProjectsViewModel>
@{
    ViewBag.Title = "Manage Project Users";
}

<h2>@ViewBag.Title</h2>
<div class="container-fluid">
    @using (Html.BeginForm())
    {
        <div class="row">
            @Html.AntiForgeryToken()
            <div class=" col-4">
                <div class="row">
                    <div class="col">
                        <h3>Select Project/s</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @Html.ListBox("Projects", null, new { @class = "form-control txtBoxs" })
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="row">
                    <div class="col">
                        <br />
                        <br />
                        <br />
                        <button type="submit" class="btn allbtn btn-lg">Assign</button>
                    </div>
                </div>
            </div>
            <div class="col-5">
                @if (User.IsInRole("Admin") || User.IsInRole("Demo_Admin"))
                {
                    <div class="row">
                        <div class="col">
                            <h3>Admins</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            @Html.DropDownList("AdminId", null, "--Select One--", new { @class = "form-control txtBoxs" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <h3>Project Managers</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            @Html.DropDownList("ProjectManagerId", null, "--Select One--", new { @class = "form-control txtBoxs" })
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="col">
                        <h3>Developers</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @Html.ListBox("Developers", null, new { @class = "form-control txtBoxs" })
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <h3>Submitters</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        @Html.ListBox("Submitters", null, new { @class = "form-control txtBoxs" })
                    </div>
                </div>
            </div>
        </div>
    }
    <hr />
    <div class="row">
        <div class="col">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Project Assignments</h4>
                        <p class="card-category" style="padding-left:10px">All Users you have assigned to Projects.</p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table" id="DTJQ2" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Projects Assigned")
                                        </th>
                                        <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Role)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @foreach (var name in item.ProjectNames)
                                                {
                                                    @name <br />
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelitem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelitem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelitem => item.Role)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

@section scripts{
    <script>
        $('#DTJQ2').DataTable();
    </script>
}